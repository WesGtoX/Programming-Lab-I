algoritmo "Maior"
var
   N, X: Inteiro
inicio
        Enquanto N <> -1 faca
              Escreva("Digite um numero: ")
              Leia (N)
              Se X < N entao
                 X <- N
              FimSe
        FimEnquanto
        Escreva("O maior numero digitado foi: ", X)
fimalgoritmo
